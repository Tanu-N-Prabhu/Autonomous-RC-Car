#include <AFMotor.h>
AF_DCMotor motor1(1);
AF_DCMotor motor2(2);

const int trigPin =9;
const int echoPin =10;
bool debugOn = true; 

long duration;
int distance;
int turnDelay = 2000; //how long a turn is. A larger number means a larger turn. and vice versa.

void setup()
{
  pinMode(trigPin, OUTPUT);
  pinMode(echoPin, INPUT);
  Serial.begin(9600);
  motor1.setSpeed(150);
  motor2.setSpeed(200);
  motor1.run(RELEASE);
  motor2.run(RELEASE);

}

void loop()
{
// Under Construction
}
